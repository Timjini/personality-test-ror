<div class="hidden lg:block mt-20">
    <ol class="relative text-gray-500 border-s border-gray-200 dark:border-gray-700 dark:text-gray-400">                  
        <% info.each_with_index do |i, index|%>
            <% if !i.nil? && session[:step] == index || session[:step] > index%>
                <li class="mb-10 ms-6">            
                    <span class="absolute flex items-center justify-center w-8 h-8  rounded-full -start-4 ring-4 ring-white current-step">
                        <svg class="w-3.5 h-3.5 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5.917 5.724 10.5 15 1.5"/>
                        </svg>
                    </span>
                    <h3 class="font-medium leading-tight"><%=i[0, 11]...%></h3>
                    <p class="text-sm">Step <%=index +1 %></p>
                </li>
                <%else%>
                <li class="mb-10 ms-6">
                    <span class="absolute flex items-center justify-center w-8 h-8 rounded-full -start-4  ring-white next-step">
                        <svg class="w-3.5 h-3.5 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 16">
                            <path d="M18 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2ZM6.5 3a2.5 2.5 0 1 1 0 5 2.5 2.5 0 0 1 0-5ZM3.014 13.021l.157-.625A3.427 3.427 0 0 1 6.5 9.571a3.426 3.426 0 0 1 3.322 2.805l.159.622-6.967.023ZM16 12h-3a1 1 0 0 1 0-2h3a1 1 0 0 1 0 2Zm0-3h-3a1 1 0 1 1 0-2h3a1 1 0 1 1 0 2Zm0-3h-3a1 1 0 1 1 0-2h3a1 1 0 1 1 0 2Z"/>
                        </svg>
                    </span>
                    <h3 class="font-medium leading-tight"><%=i[0, 11]...%></h3>
                    <p class="text-sm">Step <%=index +1 %></p>
                </li>
            <%end%>
        <%end%>
    </ol>
</div>
